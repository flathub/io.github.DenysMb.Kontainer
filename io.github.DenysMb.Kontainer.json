{
    "app-id": "io.github.DenysMb.Kontainer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kontainer",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=~/.local/share/applications:ro",
        "--filesystem=~/.local/share/icons/distrobox:ro"
    ],
    "modules": [
        {
            "name": "kontainer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/DenysMb/Kontainer.git",
                    "tag": "1.2.2",
                    "commit": "cd31c23359671eaf93d30f2a2aa0a88d6b58e8cf"
                }
            ]
        }
    ]
}
